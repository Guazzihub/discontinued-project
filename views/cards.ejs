<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item Reservations</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="cards-account-inner">
        <% reservations.forEach(reservation => { %>
            <div class="card">
                <img 
                src="<%= reservation.u_picture_01 && reservation.u_picture_01.trim() 
                        ? reservation.u_picture_01 
                        : (reservation.u_picture02 || reservation.u_picture03 || '/images/placeholder.png') %>" 
                alt="Image" 
                class="card-image"
                onerror="this.src='/images/placeholder.png';"
            />
            
                <div class="card-content">
                    <h2><%= reservation.name %></h2>
                    <p><strong>Price:</strong> R$ <%= reservation.u_price_01 %></p>
                    <strong>City:</strong> <%= reservation.u_city %> / <%= reservation.u_uf %><br>
                    <strong>Value:</strong> R$ <%= reservation.u_value || 0 %><br>
                    <strong>Discount:</strong> <%= reservation.u_discount || 0 %>%
                    <button class="btn cancel-btn" data-id="<%= reservation.id %>">Cancel Reservation</button>
                </div>
            </div>
        <% }) %>
    </div>

    <%- include('partials/footer') %>
    <script src="/scripts.js"></script>
</body>
</html>