<div id="save-filter-modal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-btn" id="close-save-modal">&times;</span>
    <h2>Save Filter</h2>
    <form id="save-filter-form">
      <label for="filterName">Filter name:</label>
      <input type="text" id="filterName" name="filterName" placeholder="Enter filter name" required />

      <div class="modal-actions">
        <button type="submit" class="btn save-btn">Save Filter</button>
      </div>
    </form>
  </div>
</div>
